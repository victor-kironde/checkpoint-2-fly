
<%= form_tag new_booking_path, class: "row",
  method: 'get', id: "flight_view" do %>
<!-- <div class="tbl-header"> -->
    <table class="table">
        <thead>
            <tr>
                <th>Select</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>departure</th>
                <th>Airline</th>
                <th>Flight No</th>
                <th>Arrival</th>
                <th>Price</th>
            </tr>
        </thead>
    </table>
</div>
<div class="tbl-content">
  <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <tr>
            <% flights.each do |flight| %>
            <td><input name="flight" value=<%= flight.id %> type="radio" id=<%= flight.id %>></td>
            <%= render partial: "partials/flight", locals: { flight: flight, date: Time.parse(params[:date]) } %>
            <% end %>
            <%= hidden_field_tag "passengers", params[:passengers] %>
            <%= hidden_field_tag "departure", params[:date] %>
            <% end %>
        </tbody>
    </table>
</div>
<div>
    <button id="select" class="btn btn-success" type="submit">
        Select Flight
    </button>
</div>
