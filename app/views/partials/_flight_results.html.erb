<%= form_tag new_booking_path, class: "row",
  method: 'get', id: "flight_view" do %>
<% @date = @search.date %>
<div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>Select</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>departure</th>
                <th>Airline</th>
                <th>Flight No</th>
                <th>Arrival</th>
                <th>Price</th>
            </tr>
        </thead>
    </table>
</div>
<div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <% @search.flights.each do |flight| %>
            <% @flight = flight %>
            <%= render partial: "partials/flight" %>
            <% end %>
            <%= hidden_field_tag "passengers", @search.passengers %>
            <%= hidden_field_tag "departure", @search.date.strftime("%Y-%m-%d") %>
            <% end %>
        </tbody>
    </table>
</div>
<div>
    <button id="select" class="btn btn-success" type="submit">
        Select Flight
    </button>
</div>
