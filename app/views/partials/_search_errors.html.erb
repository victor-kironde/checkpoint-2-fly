<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
    <div class="panel panel-danger">
      <div class="panel-heading">
        <a href="#" class="close" data-dismiss="panel" aria-label="close">&times;</a>
        <h2 class="panel-title">
          <%= pluralize(errors.count, "error(s) found") %>
        </h2>
        <div class="panel-body">
          <ul>
            <% errors.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
