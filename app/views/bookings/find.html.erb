<div class="container">
    <div class="row main">
        <div class="panel-heading">
            <div class="panel-title text-center">
                <h1 class="title">Manage Bookings</h1>
                <hr/>
            </div>
        </div>
        <div class="main-login main-center">
            <%= form_tag manage_bookings_path, method: 'get', class: "form-horizontal", role:"form" do %>


            <div class="form-group">
      				<%= label_tag "Confirmation Number" %>
      				<div class="cols-sm-10">
      					<div class="input-group">
      						<span class="input-group-addon">
      							<i class="fa fa-search fa" aria-hidden="true"></i>
      						</span>
      						<%= text_field_tag :ref, nil, :class => "form-control", id:"ref", placeholder: "Reference Number", autofocus: true %>
      					</div>
      				</div>
      			</div>

            <div class="form-group ">
                <%= submit_tag "Search", class: "btn btn-primary btn-lg btn-block login-button" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
